<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.project.test26.service.IdolMapper">
	<select id="selectIdolList" resultType="ksmart.project.test26.service.Idol">
		SELECT 
			idol_id AS idolID
			, idol_name AS idolName
		FROM idol;
	</select>
	<!-- idolInsert 쿼리문 -->
	<insert id="insertIdol" parameterType="ksmart.project.test26.service.Idol">
		INSERT 
		INTO idol(
			idol_name
		) VALUES(
			#{idolName}
		)
	</insert>
	<!-- idol수정 쿼리문 -->
	<update id="updateIdol" parameterType="ksmart.project.test26.service.Idol">
		UPDATE idol
		SET 
			idol_name = #{idolName}
		WHERE 
			idol_id = #{idolID}
	</update>
	<!-- idol삭제 쿼리문 -->
	<delete id="dateIdol" parameterType="ksmart.project.test26.service.Idol">
		DELETE FROM idol
		WHERE
			idol_id = #{idolID}
	</delete>
</mapper>