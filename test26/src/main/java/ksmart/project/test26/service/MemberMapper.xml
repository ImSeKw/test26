<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.project.test26.service.MemberMapper">
	<!--회원로그인을 위한 아이디 패스워드 찾기  -->
	<select id="selectMember" parameterType="ksmart.project.test26.service.Member" resultType="ksmart.project.test26.service.Member">
		SELECT 
			member_no AS memberNo
			, member_id AS memberId
			, member_pw AS memberPw
		FROM member
		WHERE 
			member_id = #{memberId}
			AND member_pw = #{memberPw}
	</select>
	<!--회원가입  -->
	<insert id="insertMember" parameterType="ksmart.project.test26.service.Member">
		INSERT 
		INTO member
			(member_id
			,member_pw)
		VALUES(
			#{memeberId}
			,#{memberPw}
			)	
	</insert>
</mapper>